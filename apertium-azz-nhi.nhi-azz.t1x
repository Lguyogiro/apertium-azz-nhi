<?xml version="1.0" encoding="UTF-8"?>
<transfer default="chunk">
  <section-def-cats>
    <def-cat n="det">
      <cat-item tags="det.*"/>
    </def-cat>
    <def-cat n="nom">
      <cat-item tags="n.*"/>
    </def-cat>
    <def-cat n="verb-tv">
      <cat-item tags="v.tv.*"/>
    </def-cat>
    <def-cat n="verb-iv">
      <cat-item tags="v.iv.*"/>
    </def-cat>
    <def-cat n="cnjcoo">
      <cat-item tags="cnjcoo"/>
      <cat-item tags="cnjcoo.*"/>
    </def-cat>
    <def-cat n="cnjsub">
      <cat-item tags="cnjsub"/>
      <cat-item tags="cnjsub.*"/>
    </def-cat>

    <def-cat n="sent">
      <cat-item tags="sent"/>
      <cat-item tags="sent.*"/>
    </def-cat>
    <def-cat n="cm">
      <cat-item tags="cm"/>
      <cat-item tags="cm.*"/>
    </def-cat>
  </section-def-cats>

  <section-def-attrs>
    <def-attr n="a_dep">
      <attr-item tags="@punct"/>
      <attr-item tags="@det"/>
      <attr-item tags="@cc"/>
      <attr-item tags="@mark"/>
    </def-attr>
    <def-attr n="a_subj_agr">
      <attr-item tags="s_sg1"/>
      <attr-item tags="s_sg2"/>
      <attr-item tags="s_sg3"/>
      <attr-item tags="s_pl1"/>
      <attr-item tags="s_pl2"/>
      <attr-item tags="s_pl3"/>
    </def-attr>
    <def-attr n="a_obj_agr">
      <attr-item tags="o_ref"/>
      <attr-item tags="o_sg1"/>
      <attr-item tags="o_sg2"/>
      <attr-item tags="o_sg3"/>
      <attr-item tags="o_pl1"/>
      <attr-item tags="o_pl2"/>
      <attr-item tags="o_pl3"/>
    </def-attr>

    <def-attr n="a_poss">
      <attr-item tags="px1sg"/>
      <attr-item tags="px2sg"/>
      <attr-item tags="px3sg"/>
      <attr-item tags="px1pl"/>
      <attr-item tags="px2pl"/>
      <attr-item tags="px3pl"/>
    </def-attr>
    <def-attr n="a_cas">
      <attr-item tags="nom"/>
    </def-attr>
  </section-def-attrs>

  <section-def-vars>
    <def-var n="number"/>
    <def-var n="poss"/>
    <def-var n="obj-agr"/>
    <def-var n="subj-agr"/>
  </section-def-vars>

  <section-def-macros>
    <def-macro n="test" npar="1">
          <let>
            <var n="number"/>
            <lit v=""/>
          </let>
    </def-macro>
  </section-def-macros>

  <section-rules>

    <rule comment="REGLA: VERB IV">
      <pattern>
        <pattern-item n="verb-iv"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <let><var n="subj-agr"/><clip pos="1" side="tl" part="a_subj_agr"/></let>
        <let><clip pos="1" side="tl" part="a_subj_agr"/><lit v=""/></let>
        <out>
          <chunk name="v" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SV"/></tag>
            </tags>
            <lu>
              <var n="subj-agr"/>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="tags"/>
            </lu>
          </chunk>
        </out>
        <let><var n="poss"/><lit v=""/></let>
      </action>
    </rule>

    <rule comment="REGLA: VERB-tv">
      <pattern>
        <pattern-item n="verb-tv"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <let><var n="subj-agr"/><clip pos="1" side="tl" part="a_subj_agr"/></let>
        <let><var n="obj-agr"/><clip pos="1" side="tl" part="a_obj_agr"/></let>
        <let><clip pos="1" side="tl" part="a_subj_agr"/><lit v=""/></let>
        <let><clip pos="1" side="tl" part="a_obj_agr"/><lit v=""/></let>
        <out>
          <chunk name="v" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SV"/></tag>
            </tags>
            <lu>
              <var n="subj-agr"/>
              <var n="obj-agr"/>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="tags"/>
            </lu>
          </chunk>
        </out>
        <let><var n="poss"/><lit v=""/></let>
      </action>
    </rule>

    <rule comment="REGLA: NOM">
      <pattern>
        <pattern-item n="nom"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <let><var n="poss"/><clip pos="1" side="tl" part="a_poss"/></let>
        <let><clip pos="1" side="tl" part="a_poss"/><lit v=""/></let>
        <out>
          <chunk name="n" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SN"/></tag>
            </tags>
            <lu>
              <var n="poss"/>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="tags"/>
            </lu>
          </chunk>
        </out>
        <let><var n="poss"/><lit v=""/></let>
      </action>
    </rule>


    <rule comment="REGLA: DET">
      <pattern>
        <pattern-item n="det"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <out>
          <chunk name="det" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="DET"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>


    <rule comment="REGLA: CC">
      <pattern>
        <pattern-item n="cnjcoo"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <out>
          <chunk name="cc" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="CC"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule comment="REGLA: SCONJ">
      <pattern>
        <pattern-item n="cnjsub"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <out>
          <chunk name="sconj" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SCONJ"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule comment="REGLA: CM">
      <pattern>
        <pattern-item n="cm"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <out>
          <chunk name="cm" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="CM"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

    <rule comment="REGLA: SENT">
      <pattern>
        <pattern-item n="sent"/>
      </pattern>
      <action>
        <let><clip pos="1" side="tl" part="a_dep"/><lit v=""/></let>
        <out>
          <chunk name="sent" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SENT"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

  </section-rules>
</transfer>

